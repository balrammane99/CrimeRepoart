<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"

    tools:context=".Activitys.AdminCommentUpdateActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logotext_02"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        android:text="Update Investgation"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15sp"
        android:layout_marginTop="10dp"
        android:layout_margin="15sp"
        android:background="@drawable/shape1"
        android:spinnerMode="dropdown"
        android:id="@+id/InvestgationUpdateSpinner"/>

    <EditText
        android:id="@+id/InvestgationUpdateComment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="15sp"
        android:hint="Enter Updates"
        android:background="@drawable/shape1"
        android:layout_marginHorizontal="15sp"
        android:layout_marginTop="10dp"
        android:maxLines="5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/red"
        android:id="@+id/InvestgationUpdateerrormsg"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15sp"
        android:layout_marginTop="10dp"
        android:layout_margin="15sp"
        android:textStyle="bold"
        android:text="investgation update"
        android:id="@+id/InvestgationUpdateSubmitbtn"/>

</LinearLayout>